# ========================================
# APIFY INSTAGRAM VENDOR COLLECTION
# ========================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to git (already in .gitignore)

# ========================================
# APIFY CONFIGURATION
# ========================================
# Get your token from: https://console.apify.com/settings/integrations
APIFY_API_TOKEN="your_apify_token_here"

# ========================================
# APPLICATION URLS
# ========================================
# Development
APP_URL="http://localhost:3000"

# Production (uncomment when deploying)
# APP_URL="https://your-production-url.com"

# ========================================
# SECURITY & AUTHENTICATION
# ========================================
# Generate with: node scripts/generate-secure-keys.js
INGEST_SHARED_KEY=""

# ========================================
# APIFY RATE LIMITING
# ========================================
# Start conservative, increase if needed
MCP_APIFY_RPS=1              # Requests per second
MCP_APIFY_BURST=3            # Burst capacity

# ========================================
# COLLECTION PARAMETERS
# ========================================
# Control how many profiles to collect
TIER=1                       # City tier: 1 (major), 2 (medium), 3 (smaller)
LIMIT_PER_ROW=40            # Instagram results per search term
MAX_ENRICH=400              # Max profiles to enrich per run

# ========================================
# SUPABASE CONFIGURATION
# ========================================
# You should already have these in your .env
# If not, get them from: https://supabase.com/dashboard
NEXT_PUBLIC_SUPABASE_URL="your_supabase_project_url"
SUPABASE_SERVICE_ROLE_KEY="your_supabase_service_role_key"

# ========================================
# OPTIONAL: MONITORING & ALERTS
# ========================================
# Slack webhook for collection alerts (optional)
# SLACK_WEBHOOK_URL=""

# Email for error notifications (optional)
# ERROR_NOTIFICATION_EMAIL=""
