# Supabase Configuration
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# Apify Configuration
# Get this from https://console.apify.com/account/integrations
APIFY_TOKEN=your-apify-token

# Optional: Email Alerts (for monitoring)
ALERT_EMAIL=your-email@example.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Optional: Advanced Configuration
MAX_CONCURRENT_SCRAPES=3
QUALITY_THRESHOLD=4
MIN_FOLLOWERS=500
LOG_LEVEL=INFO

# Optional: Redis Configuration (for distributed deployment)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Optional: AWS Configuration (for S3 backups)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=instagram-scraper-backups