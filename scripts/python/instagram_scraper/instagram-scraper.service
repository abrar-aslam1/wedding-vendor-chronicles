[Unit]
Description=Wedding Vendor Instagram Scraper Service
After=network.target

[Service]
Type=simple
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/wedding-vendor-chronicles/scripts/python/instagram_scraper
Environment="PATH=/home/ubuntu/wedding-vendor-chronicles/scripts/python/instagram_scraper/venv/bin:/usr/local/bin:/usr/bin:/bin"
Environment="PYTHONPATH=/home/ubuntu/wedding-vendor-chronicles/scripts/python/instagram_scraper"
ExecStart=/home/ubuntu/wedding-vendor-chronicles/scripts/python/instagram_scraper/venv/bin/python enterprise_collection.py collect-all

# Restart configuration
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/home/ubuntu/wedding-vendor-chronicles/scripts/python/instagram_scraper/logs

# Resource limits
MemoryLimit=2G
CPUQuota=50%

[Install]
WantedBy=multi-user.target